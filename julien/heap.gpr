project Heap is
   for Source_Dirs use ("src");
   for Object_Dir use "obj";

   for Main use ("main.adb");
   for Exec_Dir use "bin";

   package Builder is
      for Executable ("main.adb") use "main";
   end Builder;

   package Compiler is
      for Default_Switches("Ada") use ("-g", "-gnatwae", "-gnata");
   end Compiler;
end Heap;
